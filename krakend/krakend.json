{
  "version": 3,
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "HEAD", "POST", "PUT", "PATCH", "DELETE"],
      "expose_headers": ["Content-Length", "Content-Type"],
      "allow_headers": [
        "Accept-Language",
        "Content-Type",
        "Authorization",
        "Accept",
        "Origin"
      ],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": false
    }
  },
  "endpoints": [
    {
      "endpoint": "/tweet",
      "method": "GET",
      "backend": [
        {
          "host": "http://tweet-service:3001",
          "method": "GET",
          "url_pattern": "/",
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/tweet",
      "method": "POST",
      "backend": [
        {
          "host": "http://tweet-service:3001",
          "method": "POST",
          "url_pattern": "/"
        }
      ]
    },
    {
      "endpoint": "/user",
      "method": "GET",
      "backend": [
        {
          "host": "http://user-service:3002",
          "method": "GET",
          "url_pattern": "/",
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/user",
      "method": "POST",
      "backend": [
        {
          "host": "http://user-service:3002",
          "method": "POST",
          "url_pattern": "/"
        }
      ]
    },
    {
      "endpoint": "/user/crash",
      "method": "GET",
      "backend": [
        {
          "host": "http://user-service:3002",
          "method": "GET",
          "url_pattern": "/crash"
        }
      ]
    }
  ]
}
