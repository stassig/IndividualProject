{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", ".env.**"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_TWEET_SERVICE_URL",
        "NEXT_PUBLIC_USER_SERVICE_URL",
        "NEXT_PUBLIC_URL",
        "NEXT_PUBLIC_GATEWAY_URL",
        "DB_URL_TWEET",
        "DB_URL_USER",
        "DB_URL_TIMELINE",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_ISSUER_BASE_URL",
        "RABBITMQ_URL"
      ]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    }
  }
}
